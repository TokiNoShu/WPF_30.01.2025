<Page x:Class="WpfApp6.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp6.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="Gainsboro">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 100">
            <TextBlock Text="Практическая работа №2"
                       FontSize="30.3"
                       FontWeight="UltraBlack">
            </TextBlock>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <TextBlock Text="Введите номер задания 1-30: "
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBox x:Name="NumTask"
                     Width="100"
                     FontSize="20"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 120 0 0">
            <Button Content="Перейти к заданию"
                    FontSize="18"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnTask"
                    Click="BtnTask_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    Padding="12">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Page>
